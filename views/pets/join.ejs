<% layout('layouts/boilerplate')%>
<div class="container">
  <div class="row">
    <div class="col">

    </div>
    <div class="col">

      <div class="container pb-5">
    <form action="/pets/join" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="card howitwork-card shadow">
              <img src="https://cdn-icons-png.flaticon.com/512/732/732223.png" class="card-img-top" style="padding:15% 15%;" alt="...">
              <div class="card-body" style="background-color: white">
                <p class="card-text">Select the notification you would like to receive and join our community now.</p>
                <div class="card-body col-12 mx-auto">

                  <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" value="" id="notify">
            <label class="form-check-label" for="notify">
              Notify neighbours when your pet get lost.
            </label>
          </div>
          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" value="" id="receive" >
            <label class="form-check-label" for="receive">
              Receive notification of similar pets near you.
            </label>
          </div>
          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" value="" id="receiveall" >
            <label class="form-check-label" for="receiveall">
              Join our mutual aid community and receive all notification of pets near you.
            </label>
          </div>

          <div class="mb-3">
              <button class="btn btn-warning col-12">Join community</button>
              
          </div>
          </div>
              </div>
            </div>

</form>
          </div>

    </div>

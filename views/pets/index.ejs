<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1 class="mt-5">All Lost Pets</h1>

    <% for (let pet of allPets){ %>
      <% if (pet.status === "lost"){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(pet.images.length) {%>
                    <img class="img-fluid indeximg" alt="" src="<%=pet.images[0].url%>">
                    <% }else {%>
                    <img class="img-fluid indeximg" alt=""
                        src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/QR Reunite/lz8jjv2gyynjil7lswf4.png">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= pet.petname %> </h5>

                        <p class="card-text"><%= pet.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= pet.location%></small>
                        </p>
                        <a class="btn btn-warning" href="/pets/<%=pet._id%>">View <%=pet.name%></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
  <% }%>
</div>



<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const pets = { features: <%- JSON.stringify(pets) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
